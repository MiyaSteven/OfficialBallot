@model BallotWrapper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h1>List of Proposals:</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                <table class="table">
                    <thead>
                        <th>Proposal Name:</th>
                        <th>Vote Count:</th>
                    </thead>
                    <tbody>
                        @foreach(Proposal proposal in Model.AllProposals)
                        {
                            <tr>
                                <td><a href="/ballot/proposals/@proposal.ProposalId">@proposal.ProposalName</a></td>
                                <td>@proposal.ProposalVoters.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <a href="/ballot/proposals/new" class="col-sm-4 offset-sm-8">Create a Proposal</a>
    </div>
</body>
</html>